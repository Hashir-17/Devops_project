pipeline {
    agent any

    parameters {
        string(name: 'EC2_IP', defaultValue: '', description: 'The IP of the EC2 instance')
    }

    environment {
        DOCKER_IMAGE = 'hashir7/todo-app:latest'
        EC2_HOST = "${params.EC2_IP}"  // Use the passed parameter value for EC2 IP
    }

    stages {
        // Other stages...
        
        stage('Deploy to EC2') {
            steps {
                script {
                    withCredentials([file(credentialsId: 'EC2_SSH_PRIVATE_KEY', variable: 'SSH_KEY')]) {
                        sh """
                            echo \$SSH_KEY > /tmp/ssh_key.pem
                            chmod 600 /tmp/ssh_key.pem
                            ssh -o StrictHostKeyChecking=no -i /tmp/ssh_key.pem ec2-user@$EC2_HOST << 'EOF'
                            docker stop react-app || true
                            docker rm react-app || true
                            docker run -d --name react-app -p 80:80 $DOCKER_IMAGE
                            EOF
                        """
                    }
                }
            }
        }
    }
}
